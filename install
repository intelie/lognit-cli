#!/bin/sh

DEFAULT_VERSION=0.4.1

if [ "$1" = "--local" ]; then
    echo "Installing Lognit command-line interface (local)..."
    cp target/lognit-cli-*.sh /usr/bin/nit
    chmod a+x /usr/bin/nit
else
    VERSION=${1:-${DEFAULT_VERSION}}
    FILE=https://github.com/downloads/intelie/lognit-cli/lognit-cli-$VERSION.sh
    echo $FILE
    curl -L -H "Pragma: no-cache" $FILE > /tmp/nit
    mv /tmp/nit /usr/bin/nit
    chmod a+x /usr/bin/nit
fi

cat << '__END__' > /tmp/nitr
#!/bin/sh
if [ $# -lt 2 ]; then
    echo 'nitr <verb> <resource> [<curl params>]'
    echo 'nitr get users/welcome -v'
    exit 0
fi

state=$(cat ~/.lognit/state)
server=$(echo ${state} | sed -E 's/.*"server":"([^"]*)".*/\1/g')
sessionid=$(echo ${state} | sed -E 's/.*"name":"JSESSIONID","value":"([^"]*)".*/\1/g')
verb=$1; shift
resource=$1; shift
curl -X ${verb} -s -L -H 'Content-Type:application/json' -w \\n -b JSESSIONID=${sessionid} "http://${server}/rest/${resource}" $@
__END__
mv /tmp/nitr /usr/bin/nitr
chmod a+x /usr/bin/nitr

cat << '__END__' > /tmp/_nit  
_nit()
{
    COMPREPLY=()
    local cur="${COMP_WORDS[COMP_CWORD]}"
    local sep="${COMP_WORDS[COMP_CWORD-1]}"
    local fld="${COMP_WORDS[COMP_CWORD-2]}"

    if [[ "${sep}" == ":" ]] ; then
        local field=${fld}
    elif [[ "${cur}" == ":" ]] ; then
        local field=${sep}
        cur=
    fi

    COMPREPLY=( $(nitr get "terms?field=${field}&term=${cur}&avoidColons=true&size=100" | 
        sed -E 's/\{"terms":\[(.*)\]\}/\1/g' | 
        awk -v k=text '{n=split($0,a,","); for (i=1; i<=n; i++) print a[i]}' | sed -E 's/"(.*)"/\1/g') )
    return 0
}
complete -F _nit nit
__END__

if [ -d /etc/bash_completion.d ]; then
    echo "Installing bash completion (linux)"
    cp /tmp/_nit /etc/bash_completion.d/nit
fi
if [ -d /usr/local/etc/bash_completion.d ]; then
    echo "Installing bash completion (mac)"
    cp /tmp/_nit /usr/local/etc/bash_completion.d/nit
fi


